{
    "manifest_version": 2,
    "name": "BookShelf Extension",
    "description": "POST details of the current page to BookShelf App.",
    "version": "0.1",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ],
    "content_scripts": [ {
        "js": [ "jquery-2.1.3.min.js", "mustache.min.js", "content.js" ],
        "matches": [ "http://*/*", "https://*/*"]
    }]
}